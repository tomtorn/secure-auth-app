# Server
PORT=4000
NODE_ENV=development

# Database (Supabase Postgres via Transaction Pooler)
DATABASE_URL="postgresql://postgres.YOUR_PROJECT_REF:YOUR_PASSWORD@aws-0-eu-north-1.pooler.supabase.com:6543/postgres?pgbouncer=true"

# Direct connection for migrations
DIRECT_URL="postgresql://postgres.YOUR_PROJECT_REF:YOUR_PASSWORD@aws-0-eu-north-1.pooler.supabase.com:5432/postgres"

# Supabase
SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Frontend URL for CORS (must be explicitly set in production)
FRONTEND_URL=http://localhost:5173

# Security: CSRF token signing secret (REQUIRED in production, min 32 chars)
# Generate with: openssl rand -hex 32
CSRF_SECRET=your_32_char_secret_here

# Redis URL for distributed rate limiting (optional, uses in-memory fallback if not set)
# For production: Use AWS ElastiCache or Upstash
REDIS_URL=redis://localhost:6379
# REDIS_URL=rediss://default:xxx@xxx.upstash.io:6379

# Sentry DSN for error monitoring (optional)
# Create a project at https://sentry.io and get your DSN
# SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
